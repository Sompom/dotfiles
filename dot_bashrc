# ~/.bashrc: executed by bash(1) for non-login shells.
# see /usr/share/doc/bash/examples/startup-files (in the package bash-doc)
# for examples

# If not running interactively, don't do anything
case $- in
    *i*) ;;
      *) return;;
esac

# check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS.
shopt -s checkwinsize

# If set, the pattern "**" used in a pathname expansion context will
# match all files and zero or more directories and subdirectories.
#shopt -s globstar

PATH=$PATH:~/Downloads/android-sdk-linux/platform-tools #Android SDK
PATH=~/bin:$PATH #Newer version, other overrides

# Arcanist (phabricator.com) executable and tab completion
PATH=$PATH:~/src/arcanist/bin/
#source ~/src/arcanist/resources/shell/bash-completion

# Source all the directory files. This should be the only thing in this file.
for f in $(ls ${HOME}/.bashrc.d/*.bashrc | sort -V)
do
  echo Sourcing $f
  source $f
done
